@using DotNetFloripa.Model;
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Event>
@{
    var e = Model;
}
@section facebook{
    <meta property="og:title" content="dotnet Floripa" />
    <meta property="og:description" content="Grupo de usuários .net de Florianópolis" />
    <meta property="og:image" content="https://i.imgur.com/TenXCml.png" />
}
<div class="jumbotron">
    <img src="~/Content/images/logo-medio.png" alt="logo" class="img-responsive" style="margin:0 auto;" />
    <h1>grupo de usuários .net @@ Florianópolis</h1>
    <hr class="blue" />
    <h3 class="text-left">próximo evento:</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="well">
                <div class="row">
                    <div class="col-md-3" style="height:150px;">
                        <img src="@e.ImageUrl" alt="logo" class="img-responsive img-centered" />
                    </div>
                    <div class="col-md-9 text-left">
                        <h4 class="pull-right hidden-xs">
                            <strong>@e.Start.ToShortDateString()</strong> - <strong>@e.Start.ToShortTimeString()</strong> - <strong>@e.End.ToShortTimeString()</strong>
                        </h4>
                        <h2>
                            <a href="~/evento/@e.Slug" target="_blank">@e.Title</a>
                        </h2>
                        <p class="visible-xs">
                            <strong>@e.Start.ToShortDateString()</strong> - <strong>@e.Start.ToShortTimeString()</strong> - <strong>@e.End.ToShortTimeString()</strong>
                        </p>
                        <p>
                            @e.Description
                        </p>
                        @if (!String.IsNullOrEmpty(e.EventickUrl))
                        {
                            <div>
                                <a href="@e.EventickUrl" class="btn btn-success btn-lg btn-large"><strong>Inscreva-se!</strong></a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>