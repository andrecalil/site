@model Event
@{
    var e = Model;
    ViewBag.Title = "dotnet Floripa";
}
@section facebook{
    <meta property="og:title" content="dotnet Floripa" />
    <meta property="og:description" content="Grupo de usuários .net de Florianópolis" />
    <meta property="og:image" content="https://i.imgur.com/TenXCml.png" />
}
<div class="jumbotron">
    <img src="~/images/logo-medio.png" alt="logo" class="img-responsive" style="margin:0 auto;" />
    <h1>grupo de usuários .net @@ Florianópolis</h1>
    <hr class="blue" />

    @if (e.Slug != null)
    {
        <h3 class="text-left">próximo evento:</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="well">
                    <div class="row">
                        <div class="col-md-3" style="height:150px;">
                            <img src="@e.ImageUrl" alt="logo" class="img-responsive img-centered" />
                        </div>
                        <div class="col-md-9 text-left">
                            <h4 class="pull-right hidden-xs">
                                <strong>@e.Start.ToString("dd/MM/yyyy")</strong> - <strong>@e.Start.ToString("t")</strong> - <strong>@e.End.ToString("t")</strong>
                            </h4>
                            <h2>
                                <a href="~/evento/@e.Slug" target="_blank">@e.Title</a>
                            </h2>
                            <p class="visible-xs">
                                <strong>@e.Start.ToString("dd/MM/yyyy")</strong> - <strong>@e.Start.ToString("t")</strong> - <strong>@e.End.ToString("t")</strong>
                            </p>
                            <p>
                                @Html.Raw(e.Description)
                            </p>
                            @if (!String.IsNullOrEmpty(e.ExternalUrl))
                            {
                                <div>
                                    <a href="@e.ExternalUrl" class="btn btn-success btn-lg btn-large"><strong>Inscreva-se!</strong></a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>