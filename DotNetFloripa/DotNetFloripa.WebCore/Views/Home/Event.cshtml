@model Event
@{
    var e = Model;
    ViewBag.Title = "dotnet Floripa - " + e.Title;
    var safeDescription = ViewBag.SafeDescription;
}
@section seo {
    <meta name="description" content="Eventos de .NET em Floripa - @safeDescription">
}
@section facebook{
    <meta property="og:title" content="@e.Title" />
    <meta property="og:description" content="@safeDescription" />
    <meta property="og:image" content="https://i.imgur.com/TenXCml.png" />
}
<div class="row">
    <div class="col-md-12">
        <div class="well">
            <div class="row">
                <div class="col-md-3" style="height:150px;">
                    <img src="@e.ImageUrl" alt="logo" class="img-responsive img-centered" />
                </div>
                <div class="col-md-9">
                    <h4 class="pull-right hidden-xs">
                        <strong>@e.Start.ToString("dd/MM/yyyy")</strong> - <strong>@e.Start.ToString("t")</strong> - <strong>@e.End.ToString("t")</strong>
                    </h4>
                    <h2>
                        <a href="@(String.IsNullOrEmpty(e.ExternalUrl) ? "#" : e.ExternalUrl)" target="_blank">@e.Title</a>
                    </h2>
                    <p class="visible-xs">
                        <strong>@e.Start.ToString("dd/MM/yyyy"))</strong> - <strong>@e.Start.ToString("t")</strong> - <strong>@e.End.ToString("t")</strong>
                    </p>
                    <p>
                        @Html.Raw(e.Description)
                    </p>
                    @if (!String.IsNullOrEmpty(e.ExternalUrl))
                    {
                        <div>
                            <a href="@e.ExternalUrl" class="btn btn-success btn-lg btn-large"><strong>Inscreva-se!</strong></a>
                        </div>
                    }
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="panel-body">
                    <h1>Palestras</h1>
                    <ul class="list-group">
                        @foreach (var t in e.Talks)
                        {
                            <li class="list-group-item">
                                <h4 class="pull-right">
                                    <strong>@t.Start.ToString("t")</strong> - <strong>@t.End.ToString("t")</strong>
                                </h4>
                                <h3 class="event-title">@t.Title</h3>
                                @if (!String.IsNullOrEmpty(t.Speaker))
                                {
                                    <p class="speaker">
                                        <small>@t.Speaker</small>
                                    </p>
                                }
                                <p>@t.Description</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>